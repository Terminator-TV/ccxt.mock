import ccxt
import json

# Δημιουργία ενός mock exchange για δοκιμές
class MockExchange(ccxt.Exchange):
    def fetch_balance(self):
        return {
            'total': {
                'EUR': 0,
                'USD': 0
            }
        }

    def create_market_buy_order(self, symbol, amount):
        return {'symbol': symbol, 'amount': amount, 'status': 'buy'}

    def create_market_sell_order(self, symbol, amount):
        return {'symbol': symbol, 'amount': amount, 'status': 'sell'}

    def fetch_ohlcv(self, symbol, timeframe, limit=100):
        # Επιστρέφει ψευδή δεδομένα
        return [
            [1609459200000, 29000, 29500, 28000, 29000, 100],
            [1609459260000, 29000, 29600, 29000, 29500, 50]
        ]

# Αντικατάσταση του exchange με το mock exchange
exchange = MockExchange({
    'apiKey': 'fake_key',
    'secret': 'fake_secret',
    'enableRateLimit': True
})

